{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2016", // es2017 async keyword problem
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "allowJs": true
    //"noImplicitAny": true,   Semantic ui has noImplicitAny errors. cannot exculde due to noduleResolution=node
    //"noImplicitThis": true,
    //"strictNullChecks": true, Semantic ui has null errors. cannot exculde due to noduleResolution=node
    //"skipDefaultLibCheck": true,
    //"skipLibCheck": true
  }
}